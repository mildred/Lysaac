Section Header

  + name := INSTR_SIZEOF;

Section Inherit

  + parent_instr :Expanded INSTR;

Section Public

  //
  // Link
  //
  
  - link gen:GENERATOR;

  //
  // Generate
  //

  - generate gen:GENERATOR <-
  (
    gen.sizeof { type.generate gen; } in result;
  );
  
  - make t:BASE_TYPE :SELF <-
  (
    type   := t;
    result := TYPE_LINT.create_reg;
    made   := TRUE;
    Self
  );

Section Private

  + type :BASE_TYPE;

