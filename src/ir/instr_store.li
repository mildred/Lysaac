Section Header

  + name := INSTR_STORE;

Section Inherit

  + parent_instr :Expanded INSTR;

Section Public

  //
  // Link
  //
  
  - link gen:GENERATOR;

  //
  // Generate
  //

  - generate gen:GENERATOR <-
  (
    gen.store value to pointer;
  );
  
  - make_store_in ptr:REG value v:REG :SELF <-
  [
    -? { ptr.base_type.is_pointer };
    v.a_compatible_with (ptr.base_type.to_pointer_deref);
  ]
  (
    v.resolve_base_type_with (ptr.base_type.to_pointer_deref);
    pointer := ptr;
    value   := v;
    made := TRUE;
    Self
  );

Section Private

  + pointer    :REG;
  + value      :REG;

