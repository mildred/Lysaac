Section Header

  + name := ITM_EXPR_ARG;

Section Inherit

  + parent_itm_expr_local :Expanded ITM_EXPR_LOCAL;

Section Public

  + result :VAR;

  - compile_in list:LIST :VAR <- result;

Section ITM_SLOT

  - get_argument_variable :VAR <-
  (
    result := VAR.clone.make NULL static_type (type.to_type).make_pretty_name name
  );

  - make (n:CSTRING, t:ITM_TYPE) :SELF <-
  (
    t.set_itm_parent Self;
    name := n;
    type := t;
    Self
  );

